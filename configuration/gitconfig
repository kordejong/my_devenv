; Default settings for all repositories
[user]
	name = Kor de Jong
	email = kor@jemig.eu
[core]
	excludesfile = ~/.gitignore
	autocrlf = input
	pager = delta
	quotepath = false
[interactive]
    diffFilter = delta --color-only
[delta]
	navigate = true  # use n and N to move between diff settings
	# dark = true  # or light = true, or omit for auto-detection
	syntax-theme = Nord
[diff]
	tool = vimdiff
	submodule = log
[merge]
	tool = vimdiff
	conflictstyle = zdiff3
[mergetool "vimdiff"]
    cmd = nvim -d $LOCAL $BASE $REMOTE $MERGED \
        -c '$wincmd w' -c 'wincmd J'
[color]
	ui = auto
	interactive = auto
[column]
	ui = auto
[branch]
	sort = -committerdate
[pull]
	rebase = false
[push]
	default = simple
[alias]
	mylog = log --oneline --decorate --graph
	myfpush = push --force-with-lease
[status]
	submodulesummary = 1

