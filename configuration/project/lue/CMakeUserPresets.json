{
    "version": 7,
    "include": [
        "CMakeConanPresets.json"
    ],
    "configurePresets": [
        {
            "name": "kor_configuration",
            "hidden": true,
            "environment": {
                "LUE_OBJECTS": "$env{HOME}/development/object"
            },
            "cacheVariables": {
                "LUE_DATA_MODEL_WITH_PYTHON_API": "TRUE",
                "LUE_DATA_MODEL_WITH_UTILITIES": "TRUE",
                "LUE_FRAMEWORK_WITH_PYTHON_API": "TRUE",
                "LUE_BUILD_VIEW": "TRUE",
                "LUE_BUILD_QA": "TRUE",
                "LUE_QA_WITH_PYTHON_API": "TRUE",
                "LUE_QA_WITH_TESTS": "TRUE",
                "LUE_BUILD_DOCUMENTATION": "TRUE",
                "LUE_BUILD_HPX": "TRUE",
                "LUE_HPX_REPOSITORY": {
                    "type": "PATH",
                    "value": "file://$PROJECTS/github/kordejong/hpx"
                }
            }
        },
        {
            "name": "kor_debug_configuration",
            "hidden": true,
            "inherits": [
                "kor_configuration",
                "lue_debug"
            ]
        },
        {
            "name": "kor_relwithdebinfo_configuration",
            "hidden": true,
            "inherits": [
                "kor_configuration",
                "lue_relwithdebinfo"
            ]
        },
        {
            "name": "kor_release_configuration",
            "hidden": true,
            "inherits": [
                "kor_configuration",
                "lue_release"
            ]
        },
        {
            "name": "gransasso_configuration",
            "hidden": true,
            "cacheVariables": {
                "CMAKE_EXE_LINKER_FLAGS_DEBUG_INIT": "-fuse-ld=mold",
                "CMAKE_MODULE_LINKER_FLAGS_DEBUG_INIT": "-fuse-ld=mold",
                "CMAKE_SHARED_LINKER_FLAGS_DEBUG_INIT": "-fuse-ld=mold",
                "CMAKE_EXE_LINKER_FLAGS_RELWITHDEBINFO_INIT": "-fuse-ld=mold",
                "CMAKE_MODULE_LINKER_FLAGS_RELWITHDEBINFO_INIT": "-fuse-ld=mold",
                "CMAKE_SHARED_LINKER_FLAGS_RELWITHDEBINFO_INIT": "-fuse-ld=mold",
                "HPX_WITH_MALLOC": "tcmalloc",
                "HPX_WITH_HWLOC": "TRUE",
                "HPX_WITH_GOOGLE_PERFTOOLS": "TRUE",
                "HPX_WITH_NETWORKING": "TRUE",
                "HPX_WITH_PARCELPORT_TCP": "TRUE",
                "HPX_WITH_PARCELPORT_MPI": "FALSE",
                "LUE_QA_TEST_NR_LOCALITIES_PER_TEST": "2",
                "LUE_QA_TEST_NR_THREADS_PER_LOCALITY": "2"
            }
        },
        {
            "name": "snowdon_configuration",
            "hidden": true,
            "cacheVariables": {
                "CMAKE_EXE_LINKER_FLAGS_DEBUG_INIT": "-fuse-ld=mold",
                "CMAKE_MODULE_LINKER_FLAGS_DEBUG_INIT": "-fuse-ld=mold",
                "CMAKE_SHARED_LINKER_FLAGS_DEBUG_INIT": "-fuse-ld=mold",
                "CMAKE_EXE_LINKER_FLAGS_RELWITHDEBINFO_INIT": "-fuse-ld=mold",
                "CMAKE_MODULE_LINKER_FLAGS_RELWITHDEBINFO_INIT": "-fuse-ld=mold",
                "CMAKE_SHARED_LINKER_FLAGS_RELWITHDEBINFO_INIT": "-fuse-ld=mold",
                "HPX_WITH_MALLOC": "tcmalloc",
                "HPX_WITH_HWLOC": "TRUE",
                "HPX_WITH_GOOGLE_PERFTOOLS": "TRUE",
                "HPX_WITH_NETWORKING": "TRUE",
                "HPX_WITH_PARCELPORT_TCP": "TRUE",
                "HPX_WITH_PARCELPORT_MPI": "FALSE",
                "LUE_QA_TEST_NR_LOCALITIES_PER_TEST": "2",
                "LUE_QA_TEST_NR_THREADS_PER_LOCALITY": "2"
            }
        },
        {
            "name": "gcc_configuration",
            "hidden": true,
            "cacheVariables": {
                "CMAKE_C_FLAGS_INIT": "-W -Wall -Wextra",
                "CMAKE_CXX_FLAGS_INIT": "-W -Wall -Wextra -ftemplate-backtrace-limit=0"
            },
            "environment": {
                "LUE_COMPILER": "gcc"
            }
        },
        {
            "name": "clang_configuration",
            "hidden": true,
            "environment": {
                "LUE_COMPILER": "clang"
            }
        },
        {
            "name": "gransasso_ninja_gcc_debug",
            "inherits": [
                "gransasso_configuration",
                "ninja_configuration",
                "gcc_configuration",
                "kor_debug_configuration"
            ],
            "displayName": "gransasso / ninja / gcc / debug",
            "binaryDir": "$env{LUE_OBJECTS}/$env{LUE_COMPILER}/Debug/${sourceDirName}"
        },
        {
            "name": "gransasso_conan_debug",
            "inherits": [
                "gransasso_configuration",
                "conan-debug",
                "kor_debug_configuration"
            ],
            "displayName": "gransasso / conan / debug",
            "binaryDir": "$env{LUE_OBJECTS}/conan/Debug/${sourceDirName}"
        },
        {
            "name": "snowdon_conan_debug",
            "inherits": [
                "snowdon_configuration",
                "conan-debug",
                "kor_debug_configuration"
            ],
            "displayName": "snowdon / conan / debug",
            "binaryDir": "$env{LUE_OBJECTS}/conan/Debug/${sourceDirName}"
        },
        {
            "name": "gransasso_ninja_gcc_relwithdebinfo",
            "inherits": [
                "gransasso_configuration",
                "ninja_configuration",
                "gcc_configuration",
                "kor_relwithdebinfo_configuration"
            ],
            "displayName": "gransasso / ninja / gcc / relwithdebinfo",
            "binaryDir": "$env{LUE_OBJECTS}/$env{LUE_COMPILER}/RelWithDebInfo/${sourceDirName}"
        },
        {
            "name": "gransasso_conan_relwithdebinfo",
            "inherits": [
                "gransasso_configuration",
                "kor_relwithdebinfo_configuration"
            ],
            "displayName": "gransasso / conan / relwithdebinfo",
            "binaryDir": "$env{LUE_OBJECTS}/conan/RelWithDebInfo/${sourceDirName}"
        },
        {
            "name": "gransasso_ninja_gcc_release",
            "inherits": [
                "gransasso_configuration",
                "ninja_configuration",
                "gcc_configuration",
                "kor_release_configuration"
            ],
            "displayName": "gransasso / ninja / gcc / release",
            "binaryDir": "$env{LUE_OBJECTS}/$env{LUE_COMPILER}/Release/${sourceDirName}"
        },
        {
            "name": "gransasso_conan_release",
            "inherits": [
                "gransasso_configuration",
                "kor_release_configuration"
            ],
            "displayName": "gransasso / conan / release",
            "binaryDir": "$env{LUE_OBJECTS}/conan/Release/${sourceDirName}"
        }
    ]
}
